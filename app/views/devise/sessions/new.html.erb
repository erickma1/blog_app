<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:"login-fields" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class:"login-fields" %>
  </div>

  <div class="actions">
    <%= f.submit "Log in", class:"login-btn" %>
  </div>

  <div class="links">
    <%= render "devise/shared/links" %>
  </div>
<% end %>